html
    head
        title BDL Online Spielplan - Spieler
    body(style={"font-family": 'Calibri'})
        h3 Verein "#{team}"
        table(cellpadding='3', cellspacing='0', width='100%', style={'border': 'solid 1px'})
            thead
                tr(style={"background-color": '#AFD3E0'})
                    th(align='left', width='2%') #
                    th(align='left', width='10%') Name
                    th(align='left') Vorname
                    th(align='left') Aktionen
            tbody
                each player, i in players
                    - var count = i + 1;
                    tr
                        td(align='left') #{count}.
                        td(align='left')= player.name
                        td(align='left')= player.vorname
                        td
                            a(href='/bedelos/usermanagement/delete?encname=#{player.encName}&encvorname=#{player.encVorname}') Löschen
                tr
                    td(colspan='4') <br>Spieler hinzufügen:
                form(name="addPlayer", action="/bedelos/usermanagement/add", method="get")
                    tr
                        td &nbsp;
                        td
                            label Name
                        td(colspan='2')
                            input(type='text', name="name")
                    tr
                        td &nbsp;
                        td
                            label Vorname
                        td(colspan='2')
                            input(type='text', name="vorname")
                            input(type='submit')
