html
    head
        title BDL Online Spielplan - Tables
    body(style={"font-family": 'Calibri'})
        table(cellpadding='1', cellspacing='0', width='100%', style={'border': 'solid 1px', 'font-size' : 'smaller'})
            thead
                tr(style={"background-color": '#AFD3E0'})
                    th(align='left', rowspan='2') Pl.
                    th(align='left', rowspan='2') Spieler
                    th(align='left', rowspan='2') Verein
                    th(align='center') 3:0
                    th(align='center') 3:1
                    th(align='center') 3:2
                    th(align='center') 2:3
                    th(align='center') 1:3
                    th(align='center') 0:3
                    th(align='center') HF
                    th(align='center') SL
                    th(align='center') Max
                    th(align='center', rowspan='2') Pkt
                tr(style={"background-color": '#AFD3E0'})
                    th(align='center') 5
                    th(align='center') 4
                    th(align='center') 3
                    th(align='center') 2
                    th(align='center') 1
                    th(align='center') 0
                    th(align='center') 1
                    th(align='center') 1
                    th(align='center') 1
            tbody
                each player, i in ranking
                    - var place = i + 1;
                    tr
                        td(align='left') #{place}.
                        td(align='left')= player.name
                        td(align='left')= teams[player.team].name
                        td(align='center')= player['3:0']
                        td(align='center')= player['3:1']
                        td(align='center')= player['3:2']
                        td(align='center')= player['2:3']
                        td(align='center')= player['1:3']
                        td(align='center')= player['0:3']
                        td(align='center')= player.hf
                        td(align='center')= player.sl
                        td(align='center')= player.max
                        td(align='center')= player.punkte